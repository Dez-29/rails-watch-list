<div class="home-banner">
  <div class="container">
    <h1>Save any kind of movies </h1>
    <p>Welcome to your Watch List</p>
  </div>
</div>

<div class="title-container">
  <h2> Movie categories </h2>
  <%= link_to "Add a list", new_list_path %>
</div>
<div class="cards-container">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1590452522688-e919e18c9e96?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80)">
        <h2><%= list.name %></h2>
      </div>
    <% end %>
  <% end %>
</div>