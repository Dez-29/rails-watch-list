<h1><%= @list.name %> movies</h1>

<% @list.bookmarks.each do |bookmark| %>
  <li class="list-group-item">
    <%= bookmark.movie.title %> - <%= bookmark.movie.overview %> - <%= bookmark.comment %>
    <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
<% end %>

<%= link_to 'Back', lists_path %> |
<%= link_to 'Creat a bookmark', new_list_bookmark_path(@list) %>
